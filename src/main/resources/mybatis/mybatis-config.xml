<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration><!--配置实体类 类型的别名-->
	<typeAliases>
		<package name="group1.sb_demo03.domain"></package>
	</typeAliases>

    <!--配置分页的插件-->
    <plugins>
        <plugin interceptor="com.github.pagehelper.PageInterceptor"></plugin>
    </plugins>
	<!-- 指定义连接数据的配置 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://localhost:3306/k9512db?useUnicode=true&amp;characterEncoding=utf-8"/>
				<property name="username" value="root"/>
				<property name="password" value=""/>
			</dataSource>
		</environment>
	</environments>



	<!-- 指定义连接数据的配置 -->

	<!-- 加载sql映射文件 -->
	<mappers>
		<!--<mapper resource="cn/kgc/grade/dao/GradeMapper.xml"/>
            <mapper resource="cn/kgc/grade/dao/StudentsMapper.xml"/>-->
		<package name="group1.sb_demo03.dao"></package>
	</mappers>

</configuration>

